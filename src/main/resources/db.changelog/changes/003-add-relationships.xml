<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="3" author="vadim">
        <comment>Add foreign key relationships</comment>

        <!-- Add foreign key from wallets to users -->
        <addForeignKeyConstraint
                baseTableName="wallets"
                baseColumnNames="user_id"
                constraintName="fk_wallets_users"
                referencedTableName="users"
                referencedColumnNames="id"
                onDelete="CASCADE"/>

        <!-- Create index on user_id for better performance -->
        <createIndex indexName="idx_wallets_user_id" tableName="wallets">
            <column name="user_id"/>
        </createIndex>

        <rollback>
            <dropForeignKeyConstraint baseTableName="wallets" constraintName="fk_wallets_users"/>
            <dropIndex indexName="idx_wallets_user_id" tableName="wallets"/>
        </rollback>
    </changeSet>
</databaseChangeLog>